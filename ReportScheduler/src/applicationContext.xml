	<bean id="globalService" class="com.lexmark.service.impl.real.AmindGlobalService">
		<property name="statelessSessionFactory"><ref bean="statelessSessionFactory"/></property> 
	</bean>
-->

    <bean id="reportScheduleService" class="com.lexmark.service.impl.real.jdbc.ReportScheduleServiceImp" singleton="false">
    	<property name="globalService" ref="globalServiceFacade" />
    	<property name="userInfoService" ref="userInfoService" />
     </bean>
<!-- 
    <bean id="documentumServcice" class="com.lexmark.reportScheduler.service.impl.mock.DocumentumServiceMock" singleton="false" />

    <bean id="reportGenerator" class="com.lexmark.reportScheduler.service.impl.mock.ReportGenerateServiceMock" singleton="false" />
