	<bean id="dataSource" class="com.amind.data.source.SiebelDataSource">
		<property name="configLocation"><value>amindweb</value></property>
	</bean>

	<bean id="workflowProcessManager" class="com.amind.workflow.service.WorkflowProcessManager">
		<property name="dataSource"><ref bean="dataSource"/></property>
	</bean>
	
	<bean id="boDataService" class="com.amind.data.service.SiebelBODataService">
		<property name="dataSource"><ref bean="dataSource"/></property>
		<property name="domainObjectBrokerDao"><ref bean="doBrokerDao"/></property>
	</bean>
	<bean id="eaiDataService" class="com.amind.data.service.SiebelEAIDataService">
		<property name="dataSource"><ref bean="dataSource"/></property>
		<property name="domainObjectBrokerDao"><ref bean="doBrokerDao"/></property>
	</bean>
	
	<bean id="productDataService" class="com.amind.data.service.SiebelProductDataService">
		<property name="dataSource"><ref bean="dataSource"/></property>
		<property name="domainObjectBrokerDao"><ref bean="doBrokerDao"/></property>
	</bean>
	
	<bean id="workflowDataService" class="com.amind.data.service.SiebelWorkflowDataService">
		<property name="dataSource"><ref bean="dataSource"/></property>
		<property name="domainObjectBrokerDao"><ref bean="doBrokerDao"/></property>
	</bean>	

	<bean id="workflowService" class="com.amind.workflow.service.WorkflowProcessManager">
		<property name="dataSource"><ref bean="dataSource"/></property>
	</bean>	
		
	<bean id="dataManager" class="com.amind.data.service.DataManager">
		<property name="domainObjectBrokerDao"><ref bean="doBrokerDao"/></property>
	</bean>
	
	<bean id="catalogDataManager" class="com.amind.catalog.service.CatalogDataManager">
		<property name="domainObjectBrokerDao"><ref bean="doBrokerDao"/></property>
	</bean>
	
	<bean id="workflowDataManager" class="com.amind.workflow.service.WorkflowDataManager">
		<property name="domainObjectBrokerDao"><ref bean="doBrokerDao"/></property>
	</bean>	
	
	<bean id="siebelBusServiceProxy" class="com.amind.common.service.SiebelBusinessServiceProxy">
		<property name="dataSource"><ref bean="dataSource"/></property>
		<property name="dataManager"><ref bean="dataManager"/></property>
	</bean>	
	
		
	<bean id="doBrokerDao" class="com.amind.data.service.DomainObjBrokerDao">
		<property name="dataServiceMap">
			<map>
				<entry key="Siebel BO">
					<ref local="boDataService"/>
				</entry>	             
				<entry key="EAI Siebel Adapter">
					<ref local="eaiDataService"/>
				</entry>
				<entry key="PDS Business Service">
					<ref local="productDataService"/>
				</entry>	
				<entry key="Workflow Process Manager">
					<ref local="workflowDataService"/>
				</entry>					
			</map>
		</property>		
	</bean>	

	
</beans>
