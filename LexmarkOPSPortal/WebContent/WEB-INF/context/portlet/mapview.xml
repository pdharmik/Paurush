<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
	     http://www.springframework.org/schema/beans
	     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		 http://www.springframework.org/schema/context 
		 http://www.springframework.org/schema/context/spring-context-3.0.xsd
		 http://www.springframework.org/schema/util 
	     http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<context:annotation-config/>
  	<!-- Controllers -->
  	<bean id="propertyConfigurerMapView" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
       		 <list>
               <value>/WEB-INF/context/common.properties</value> 
			   <value>/WEB-INF/context/webservice.properties</value>
        	 </list>    
        </property>
	</bean>
	
	<bean id="fleetManagementController" class="com.lexmark.services.portlet.fleetmanagement.FleetManagementController">
		<property name="lbsEndpointURL">
			<value>${fleetManagement.lbs.endPoint}</value>
		</property>
	</bean>
	<bean id="deviceStatusController" class="com.lexmark.services.portlet.fleetmanagement.DeviceStatusController"/>
	<bean id="cannedQueryServiceimpl" class="com.lexmark.service.impl.real.OpsCannedQueryServiceImpl"></bean>
	<bean id="filterManagementController" class="com.lexmark.services.portlet.fleetmanagement.FilterManagementController">
		<property name="cannedQueryService" ref="cannedQueryServiceimpl"></property>
		<property name="createMoveService" ref="createMoveServiceimpl"></property>
	</bean>
	<bean id="addressCleansing" class="com.lexmark.services.portlet.common.AddressCleansingController"> </bean>
	<bean id="orderSuppliesAssetOrderController" class="com.lexmark.services.portlet.OrderSuppliesAssetOrderController">
		<property name="maxPartsToBeOrdered"><value>${assetOrderParts.numberOfParts}</value></property>
    	<property name="listOfFileTypes">
    			<value>${attachment.fileType.list}</value>
    	</property>
   		<property name="attMaxCount">
    			<value>${attachment.maxcount}</value>
    	</property>
	</bean>
	<bean id="suppliesAndServiceController" class="com.lexmark.services.portlet.fleetmanagement.SuppliesAndServiceController"> 
		<property name="maxPartsToBeOrdered"><value>${assetOrderParts.numberOfParts}</value></property>
    	<property name="listOfFileTypes">
    			<value>${attachment.fileType.list}</value>
    	</property>
   		<property name="attMaxCount">
    			<value>${attachment.maxcount}</value>
    	</property>
	</bean>
	
	<bean id="createMoveServiceimpl" class="com.lexmark.services.webService.CreateDirectMoveServiceImpl">
		<property name="username"><value>${direct.move.username}</value></property>
		<property name="password"><value>${direct.move.password}</value></property>
		<property name="url"><value>${direct.move.url}</value></property>
	</bean>
	
	<bean id="placementService" class="com.lexmark.services.webService.PlacementServiceImpl">
		<property name="username"><value>${direct.move.username}</value></property>
		<property name="password"><value>${direct.move.password}</value></property>
		<property name="url"><value>${direct.move.url}</value></property>
	</bean>
	<bean id="multiplePageCountsUpdateController" class="com.lexmark.services.portlet.fleetmanagement.MultiplePageCountsUpdateController"></bean>
	<!-- Handler Mappings -->

	<bean class="org.springframework.web.portlet.mvc.annotation.DefaultAnnotationHandlerMapping">
		<property name="order" value="10"/>
		<property name="interceptors">
			<list>
				<ref bean="userInfoInterceptor" />
				<ref bean="opsCompanySelectedInterceptor" />
				<ref bean="accountAssociateInterceptor" />
				<ref bean="performanceInterceptor" />
			</list>
      	</property>
	</bean>
	<bean id="portletMultipartResolver"
		class="org.springframework.web.portlet.multipart.CommonsPortletMultipartResolver">
		<!-- <property name="maxUploadSize" value="1048576" /> -->
	</bean>

	<!-- Exceptions Handlers -->
	
	<bean id="addDemmissionChangeAssetController" class="com.lexmark.services.portlet.fleetmanagement.AddDemmissionChangeAssetController"> </bean> 
	
		
	<bean id="commonController" class="com.lexmark.services.portlet.common.CommonController"> </bean>
	  <bean id="serviseRequestController" class="com.lexmark.services.portlet.common.ServiseRequestHistoryController"> </bean>	

	<bean id="contactController" class="com.lexmark.services.portlet.common.ContactController"> </bean> 
	<bean id="manageAssetsController" class="com.lexmark.services.portlet.cm.ManageAssetsController"> 
		<property name="listOfFileTypes">
    			<value>${attachment.fileType.list}</value>
    	</property>
   		<property name="attMaxCount">
    			<value>${attachment.maxcount}</value>
    	</property>
    	<property name="lbsFormPost">
    		<value>${fleetManagement.lbs.endPoint}</value>
    	</property>
	</bean>
	<bean id="manageMultiAssetsController" class="com.lexmark.services.portlet.cm.ManageMultiAssetsController"> 
		<property name="listOfFileTypes">
    			<value>${attachment.fileType.list}</value>
    	</property>
   		<property name="attMaxCount">
    			<value>${attachment.maxcount}</value>
    	</property>
    	<property name="lbsFormPost">
			<value>${fleetManagement.lbs.endPoint}</value>
		</property>
	</bean>
	<bean id="lBSFloorPlanService" class="com.lexmark.service.impl.real.AmindLBSFloorPlanService"></bean>	
	<bean id="lbsLocationService" class="com.lexmark.service.impl.real.AmindLBSLocationService"></bean>
	<bean id="attachmentController" class="com.lexmark.services.portlet.common.CommonAttachmentController"/>
	<bean id="changeAssetValidator" class="com.lexmark.services.form.validator.ManageAssetFormValidator" scope="prototype"></bean>
	<bean id="preferenceMgmtController" class="com.lexmark.services.portlet.fleetmanagement.PreferenceManagementController" ></bean>
	<bean id="mapsRequestController" class="com.lexmark.services.portlet.cm.MapsRequestController"></bean>
	
	<bean id="historyController" class="com.lexmark.services.portlet.common.HistoryController"> </bean>
	<bean id="serviceRequestController" class="com.lexmark.services.portlet.ServiceRequestController"/>
	<bean id="placementController" class="com.lexmark.services.portlet.fleetmanagement.PlacementController"/>
	
	<bean id="deviceStatusService" class="com.lexmark.services.webService.DeviceStatusServiceImpl">
		<property name="username">
    			<value>${createServiceRequest.userName}</value>
    	</property>
   		<property name="password">
    			<value>${createServiceRequest.password}</value>
    	</property>
    	<property name="endPoint">
    			<value>${fleetmanagement.ws.deviceStatus}</value>
    	</property>
   		
	</bean>
	<util:map id ="historyPageMap" key-type="java.lang.String" value-type="java.lang.String" >	
			
		<entry key="ALL_REQUESTS" value="allRequestHistory" />
		<entry key="SUPPLY_REQUESTS" value="supplyRequestHistory" />
		<entry key="CHANGE_REQUESTS" value="changeRequestHistory" />
		<!-- <entry key="SERVICE_REQUESTS" value="serviceRequestHistory" />-->
		<entry key="SERVICE_REQUESTS" value="serviceRequestListPage" />
	</util:map>
	
	<util:map id ="historyPageAccessRoleMap" key-type="java.lang.String" value-type="java.lang.String" >			
		<entry key="ALL_REQUESTS" value="SHOW REQUEST HISTORY" />
		<entry key="SUPPLY_REQUESTS" value="SHOW SUPPLIES REQUEST" />
		<entry key="CHANGE_REQUESTS" value="SHOW CHANGE MGMT REQUEST" />
		<entry key="SERVICE_REQUESTS" value="SHOW SERVICE REQUEST" />
	</util:map>
	<bean id="defaultExceptionHandler" parent="defaultExceptionHandlerTemplate"/>
</beans>
