<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config/>

	
	<!-- Controllers -->

	
	<bean id="orderRequestController" class="com.lexmark.portlet.source.OrderRequestController"/>
	<bean id="orderUpdateController" class="com.lexmark.portlet.source.OrderUpdateController"/>
	<bean id="acceptOrderController" class="com.lexmark.portlet.source.AcceptOrderController"/>
	<bean id="baseController" class="com.lexmark.portlet.BaseController"/>
	<bean id="gridSettingController" class="com.lexmark.portlet.GridSettingController" />
	<bean id="portletMultipartResolver" class="org.springframework.web.portlet.multipart.CommonsPortletMultipartResolver" />	<!-- added for CI5 attachment feature -->
	<!-- Handler Mappings -->

	<bean class="org.springframework.web.portlet.mvc.annotation.DefaultAnnotationHandlerMapping">
		<property name="order" value="10"/>
        <property name="interceptors">
            <list>
                <ref bean="userInfoInterceptor" />
				<ref bean="accountAssociateInterceptor" />
				<ref bean="performanceInterceptor" />
            </list>
        </property>
	</bean>
	
	<!-- Validator -->
	<bean id="serviceOrderValidator" class="com.lexmark.form.source.validator.ServiceOrderValidator"/>

	<!-- Exceptions Handlers -->

	<bean id="defaultExceptionHandler" parent="defaultExceptionHandlerTemplate"/>

</beans>
