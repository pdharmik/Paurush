<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	 http://www.springframework.org/schema/util 
	 http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<context:annotation-config/>
	
	
	
	<bean id="hardwareDebriefController" class="com.lexmark.portlet.HardwareDebriefController" >
		<property name="attachmentController" ref="attachmentController"></property>
		<property name="lbsEndpointURL">
			<value>${fleetManagement.lbs.endPoint}</value>
		</property>
	</bean>
	
 
	<bean id="gridSettingController" class="com.lexmark.portlet.GridSettingController" />
	<bean id="accountSelectionController" class="com.lexmark.portlet.common.AccountSelectionController" />
	<bean id="contactController" class="com.lexmark.portlet.ContactController" />
	<!--<bean id="addNotePopUpController" class="com.lexmark.portlet.AddNotePopUpController" />-->
	<bean id="chlTreeController" class="com.lexmark.portlet.ChlTreePopUpController"></bean>
	<bean id="ClaimRequestCreateController" class="com.lexmark.portlet.ClaimRequestCreateController"></bean>
	<bean id="addressListPopUpController" class="com.lexmark.portlet.AddressListPopUpController" />
	<bean id="addressCleansingController" class="com.lexmark.portlet.common.AddressCleansingController"></bean>
		<bean id="GeographyListResult" class="com.lexmark.result.GeographyListResult"/>
	<bean id="attachmentController" class="com.lexmark.portlet.common.AttachmentController" >
			<property name="fileUploadFormValidator" ref="fileUploadFormValidator"></property>
	</bean>
	
	<bean id="lbsLocationService" class="com.lexmark.service.impl.real.AmindLBSLocationService"></bean>	
	
	<bean id="propertyConfigurer"  class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
        	<list>
               <value>classpath:attachment.properties</value>
                <value>/WEB-INF/context/webservice.properties</value>  
            </list>  
        </property>
    </bean>
	
	 <bean id="fileUploadFormValidator"
		class="com.lexmark.form.validator.FileUploadFormValidator">
		<property name="maxFileCount">
			<value>${hardwareDebrief.attachment.maxcount}</value>
		</property>
		<property name="maxFileSize">
			<value>${hardwareDebrief.attachment.maxsize}</value>
		</property>
		<property name="fileTypeList">
			<value>${hardwareDebrief.attachmentFileType.list}</value>
		</property>
		
	</bean> 
	
	<bean id="portletMultipartResolver"
		class="org.springframework.web.portlet.multipart.CommonsPortletMultipartResolver">
	
	</bean>
	
	
	<!-- Handler Mappings -->

	<bean class="org.springframework.web.portlet.mvc.annotation.DefaultAnnotationHandlerMapping">
		<property name="order" value="10"/>
        <property name="interceptors">
            <list>
                <ref bean="userInfoInterceptor" />
				<ref bean="accountAssociateInterceptor" />
				<ref bean="performanceInterceptor" />
            </list>
        </property>
	</bean>
	
	
	
<!-- Exceptions Handlers -->

	<bean id="defaultExceptionHandler" parent="defaultExceptionHandlerTemplate"/>

</beans>
