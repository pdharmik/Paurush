<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<!-- Mapping file for the LexmarkTransaction class of Lexmark Service. @author 
	Alex Zhou <alexzhou216@gmail.com> -->
<hibernate-mapping package="com.lexmark.domain">

	<class name="ConfigurationItem" table="CONFIGURATION_ITEM" lazy="true">

		<id name="id" type="int" column="CONFIGURATION_ITEM_ID" length="100"
			unsaved-value="0">
			<generator class="native" />
		</id>
		<property name="itemKey" column="ITEM_KEY" type="string"
			length="100" not-null="true" />

		<property name="itemValue" column="ITEM_VALUE" type="string"
			length="100" not-null="true" />
	</class>
</hibernate-mapping>

