<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >



<hibernate-mapping package="com.lexmark.domain">

<class name="UserFieldsViewSettingOPS"
       table="OPS_USER_FIELD_PREFERENCES"
       lazy="false">
     
     <id name="prefId" length="50"  type="string" column="PREF_ID"></id>
	   
	   <property   name="userNumber"
                column="USERID"
                type="string"
                length="100"
                not-null="false"
                />
	   
	 <property   name="fieldsDisplayed"
                column="FIELDS"
                type="string"
                length="100"
                not-null="false"
                /> 
                                                                       
</class>
</hibernate-mapping>